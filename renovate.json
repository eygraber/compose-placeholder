{
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["gradle", "gradle-wrapper", "github-actions"],
  "labels": ["dependencies"],
  "prHourlyLimit": 3,
  "packageRules": [
    {
      "groupName": "GradleConventionsUpdates",
      "matchDatasources": ["maven"],
      "matchFiles": ["libs.versions.toml", "settings.gradle.kts"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackagePrefixes": ["com.eygraber.conventions"],
      "automerge": true
    },
    {
      "matchDatasources": ["maven"],
      "depType": "dependencies",
      "registryUrls": [
        "https://repo.maven.apache.org/maven2/",
        "https://dl.google.com/dl/android/maven2/",
        "https://plugins.gradle.org/m2"
      ],
      "excludePackagePrefixes": ["com.eygraber.conventions"]
    }
  ]
}
